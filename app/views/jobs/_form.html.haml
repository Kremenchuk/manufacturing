.col-xs-12
  .col-xs-2
    - if @job.id.present?
      = link_to copy_job_path(@job.id), class: 'btn btn-default', title: t('all_form.copy') do
        %i.fa.fa-clone
      = link_to job_path(@job.id), method: :delete, class: 'btn btn-default', title: t('all_form.delete'), data: {confirm: t('all_form.confirm_delete')} do
        %i.fa.fa-trash
      = link_to t('all_form.include_in'), item_inclusions_job_path, class: 'btn btn-default', title: t('all_form.include_in'),
       remote: true, 'data-toggle': 'modal', 'data-target': '#item-inclusions-modal'

= form_for @job, html: {class: 'submit-form'} do |f|
  .col-xs-12
    .col-xs-6
      .form-group
        = f.label :name, t('all_form.name')
        = f.text_field :name, class: 'form-control validate-field'
      .form-group
        = f.label :name_for_print, t('all_form.name_for_print_om')
        = f.text_field :name_for_print, class: 'form-control validate-field'
      .form-group
        = f.label :price, t('all_form.price')
        = f.number_field :price, step: 0.001,class: 'form-control validate-field'
      .form-group
        = f.label :time, t('all_form.time')
        = f.number_field :time, step: 1, class: 'form-control validate-field'
      .form-group
        = f.check_box :print_in_collection
        = f.label :print_in_collection, t('all_form.print_in_collection')
      .form-group
        = f.submit t('all_form.save'), class: 'btn btn-success'
        = link_to t('all_form.cancel'), cancel_button_path(returning_entity: 'job'), class: 'btn btn-danger'

= render partial: 'layouts/modal_item_inclusions'