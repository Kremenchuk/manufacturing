= form_for @job do |f|
  .form-group
    = f.label :name, 'Наименование'
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :price, 'Цена'
    = f.number_field :price, step: 0.01,class: 'form-control'
  .form-group
    = f.label :time, 'Время'
    = f.number_field :time, step: 1, class: 'form-control'
  .form-group
    = f.label :print, 'Печатать'
    = f.check_box :print, class: 'form-control'
  .form-group
    = f.submit 'Сохранить', class: 'btn btn-success'
    = link_to 'Отмена', root_path(active_tab: 'job'), class: 'btn btn-danger'