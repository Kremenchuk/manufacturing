- if @workers_report.present?
  - @workers_report.each_with_index do |worker, item_counter|
    %tr.table-workers-report-style
      %td.table-10
        = "#{item_counter + 1}"
      %td.table-40-left
        = worker[:worker].fio
      %td.table-10
        = worker[:total_sum].to_f.round(2)
-else
  %tr.table-workers-report-style
    %td.table-10
    %td.table-40-left
    %td.table-10





