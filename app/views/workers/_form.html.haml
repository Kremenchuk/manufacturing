.col-md-12
  - if @worker.id.present?
    = link_to worker_path(@worker.id), method: :delete, class: 'btn btn-default', title: t('all_form.delete'), data: {confirm: t('all_form.confirm_delete')} do
      %i.fa.fa-trash

= form_for @worker do |f|
  .form-group
    = f.label :fio, t('all_form.fio')
    = f.text_field :fio, class: 'form-control validate-field'
  .form-group
    = f.label :position, t('all_form.position')
    = f.text_field :position, class: 'form-control validate-field'
  .form-group
    = f.submit t('all_form.save'), class: 'btn btn-success'
    = link_to t('all_form.cancel'), cancel_button_path(returning_entity: 'worker'), class: 'btn btn-danger'