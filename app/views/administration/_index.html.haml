.col-md-12
  %h1
    Роли пользователей
.col-md-12
  - @roles.each do |role|
    = form_tag(edit_role_path(role.id), remote: true, method: :get, id: 'role_form') do
      .col-md-3
        = text_field_tag :role_name, role.name, class: 'form-control validate-field', name: 'role[name]'
      .col-md-7
        = text_field_tag :role_available_classes, role.available_classes, class: 'form-control validate-field', name: 'role[available_classes]'
      .col-md-2
        = submit_tag 'Редактировать', class: 'btn btn-success'
        = link_to role_path(id: role.id), method: :delete, class: 'btn btn-default', title: 'Удалить', data: {confirm: 'Точно удалить?'} do
          %i.fa.fa-trash
  = form_tag(roles_path, method: :post, id: 'new_role_form') do
    .col-md-3
      = text_field_tag :role_name, '', class: 'form-control validate-field', name: 'role[name]'
    .col-md-7
      = text_field_tag :role_available_classes, '', class: 'form-control validate-field', name: 'role[available_classes]'
    .col-md-2
      = submit_tag 'Добавить', class: 'btn btn-success'

.col-md-12
  %hr

