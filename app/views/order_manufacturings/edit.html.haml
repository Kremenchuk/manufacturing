%h1
  .col-md-12{style: '  padding-bottom: 25px'}
    - case @o_m.o_m_status
      - when 'no_status'
        .no-status-text
          = "#{t('all_form.edit')} '#{@o_m.number}'. #{t('o_m.order')} #{t('o_m.no_status')}"
      - when 'in_progress'
        .in-work-status-text
          = "#{t('all_form.edit')} '#{@o_m.number}'. #{t('o_m.order')} #{t('o_m.in_progress')}"
      - when 'produced'
        .finished-status-text
          = "#{t('all_form.edit')} '#{@o_m.number}'. #{t('o_m.order')} #{t('o_m.done')}"
      - when 'shipped'
        .shipped-status-text
          = "#{t('all_form.edit')} '#{@o_m.number}'. #{t('o_m.order')} #{t('o_m.shipped')}"
.col-md-12
  = render 'form'